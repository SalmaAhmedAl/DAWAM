<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DAWAM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="contact_us_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="contact_us_text_item">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="transation_section">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="about_us_description">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Theme.DAWAM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DAWAM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DAWAM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>