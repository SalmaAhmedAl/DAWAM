<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.about.about_us1.AboutUs1Fragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/about_us_img1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/about_us_img1"
            />
        <ImageView
            android:id="@+id/slider"
            android:layout_margin="5dp"
            android:layout_width="36dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/about_us_img1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/slider1"
            />
        <TextView
            android:id="@+id/about_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/about_us_img1"
            android:text="@string/about_us_text1"
            style="@style/about_us_description"
            android:layout_marginTop="48dp"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>