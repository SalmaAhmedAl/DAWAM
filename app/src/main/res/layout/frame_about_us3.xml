<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.about.about_us3.AboutUs3Fragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/about_us_img3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/about_us_img3" />

            <ImageView
                android:id="@+id/slider3"
                android:layout_margin="8dp"
                android:layout_width="36dp"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@id/about_us_img3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/slider3" />

            <TextView
                android:id="@+id/about_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/about_us_img3"
                android:text="@string/about_us_text3"
                style="@style/about_us_description"
                android:layout_marginTop="48dp"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>