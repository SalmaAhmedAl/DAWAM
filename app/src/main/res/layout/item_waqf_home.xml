<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:gravity="end"
        android:background="@drawable/waqf_rounded">

        <LinearLayout
            android:id="@+id/name_waqf_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="locale"
            app:layout_constraintBottom_toTopOf="@+id/founder_waqf_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/waqf_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:padding="4dp"
                android:text="@string/cairoUniversity"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semi_bold"
                android:paddingEnd="8dp"
                android:text="@string/waqfNameInHome"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/founder_waqf_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/type_waqf_layout"
            app:layout_constraintStart_toStartOf="@id/name_waqf_layout"
            app:layout_constraintTop_toBottomOf="@+id/name_waqf_layout">

            <TextView
                android:id="@+id/founderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:padding="4dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semi_bold"
                android:paddingEnd="8dp"
                android:text="@string/person_name"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/type_waqf_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/founder_waqf_layout">

            <TextView
                android:id="@+id/waqf_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:padding="4dp"
                android:text="@string/quran"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semi_bold"
                android:paddingEnd="8dp"
                android:text="@string/waqf_type"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/more_details_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/btn_rounded_green"
            android:elevation="11dp"
            android:fontFamily="@font/cairo"
            android:text="@string/read_more"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type_waqf_layout"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>